[formatters]
keys=default

[formatter_default]
format=%(asctime)s:%(levelname)s:%(message)s
class=logging.Formatter

[handlers]
keys=console, error_file, log_file

[handler_console]
class=logging.StreamHandler
formatter=default
args=tuple()

[handler_log_file]
class=logging.FileHandler
level=<%= @agent_log_level %>
formatter=default
args=("agent.log", "w")

[handler_error_file]
class=logging.FileHandler
level=<%= @agent_log_level %>
formatter=default
args=("error.log", "w")

[loggers]
keys=root

[logger_root]
level=<%= @agent_log_level %>
formatter=default
handlers=console,error_file